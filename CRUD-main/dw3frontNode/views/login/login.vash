<!DOCTYPE html>
<html lang="en">

@html.include("header")

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f5f7;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .login-card {
        width: 60%;
        max-width: 600px;
        border-radius: 20px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        background-color: #ffffff;
        padding: 40px;
    }

    .login-header {
        background-color: #2c3e50;
        color: white;
        padding: 20px 0;
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        border-radius: 10px 10px 0 0;
    }

    .form-login {
        padding: 20px 0;
    }

    .form-login label {
        font-weight: bold;
        display: block;
        margin-bottom: 10px;
    }

    .form-control {
        padding: 15px;
        font-size: 1.1rem;
        border-radius: 5px;
        border: 1px solid #ddd;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #2c3e50;
        border: none;
        padding: 15px 30px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #34495e;
    }

    .error-message {
        color: #e74c3c;
        text-align: center;
        margin-top: 20px;
        font-weight: bold;
    }
</style>

<body>

    <div class="login-card">
        <div class="login-header">ERP System Login</div>
        <form class="form-login" action="Login" method="POST">
            <label for="labelusername">Usu√°rio</label>
            <input type="text" name="username" id="labelusername" class="form-control" required />

            <label for="labelpassword">Senha</label>
            <input type="password" name="password" id="labelpassword" class="form-control" required />

            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>

            @if(model.message) {
            <p class="error-message">
                @model.message
            </p>
            }
        </form>
    </div>

    <script src="js/5.3.0/bootstrap.min.js" crossorigin="anonymous"></script>

</body>

</html>
